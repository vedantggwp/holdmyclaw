// OpenClaw config: Anthropic Claude + Discord
// Generated by HoldMyClaw â€” verified against official OpenClaw schema
// Location on server: /opt/openclaw/config/openclaw.json
{
  gateway: {
    port: 18789,
    bind: "lan",
    auth: {
      token: "${OPENCLAW_GATEWAY_TOKEN}"
    }
  },

  env: {
    ANTHROPIC_API_KEY: "${LLM_API_KEY}"
  },

  agents: {
    defaults: {
      model: {
        primary: "anthropic/claude-opus-4-6",
        fallbacks: ["anthropic/claude-sonnet-4-5-20250929"]
      },
      contextTokens: 200000,
      timeoutSeconds: 600
    }
  },

  channels: {
    discord: {
      enabled: true,
      token: "${CHANNEL_TOKEN}",
      dm: {
        enabled: true,
        policy: "${DM_POLICY}"            // "pairing" (secure) or "open" (easy)
      },
      guilds: {},
      historyLimit: 20,
      textChunkLimit: 2000
    }
  },

  session: {
    reset: {
      mode: "daily",
      atHour: 4
    }
  },

  skills: {
    allowBundled: ["clawhub"]
  }
}
