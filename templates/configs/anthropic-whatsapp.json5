// OpenClaw config: Anthropic Claude + WhatsApp
// Generated by HoldMyClaw — verified against official OpenClaw schema
// Location on server: /opt/openclaw/config/openclaw.json
//
// NOTE: WhatsApp requires QR pairing AFTER deployment.
// No token is needed in this config — pairing creates credentials automatically.
{
  gateway: {
    port: 18789,
    bind: "lan",
    auth: {
      token: "${OPENCLAW_GATEWAY_TOKEN}"
    }
  },

  env: {
    ANTHROPIC_API_KEY: "${LLM_API_KEY}"
  },

  agents: {
    defaults: {
      model: {
        primary: "anthropic/claude-opus-4-6",
        fallbacks: ["anthropic/claude-sonnet-4-5-20250929"]
      },
      contextTokens: 200000,
      timeoutSeconds: 600
    }
  },

  channels: {
    whatsapp: {
      enabled: true,
      dmPolicy: "pairing",
      sendReadReceipts: true,
      textChunkLimit: 4000,
      mediaMaxMb: 50
    }
  },

  session: {
    reset: {
      mode: "daily",
      atHour: 4
    }
  },

  skills: {
    allowBundled: ["clawhub"]
  }
}
