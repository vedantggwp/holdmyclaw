// OpenClaw config: OpenAI + WhatsApp
// Generated by HoldMyClaw â€” verified against official OpenClaw schema
{
  gateway: {
    port: 18789,
    bind: "lan",
    auth: {
      token: "${OPENCLAW_GATEWAY_TOKEN}"
    }
  },

  env: {
    OPENAI_API_KEY: "${LLM_API_KEY}"
  },

  agents: {
    defaults: {
      model: {
        primary: "openai/gpt-4.1",
        fallbacks: ["openai/gpt-4.1-mini"]
      },
      contextTokens: 128000,
      timeoutSeconds: 600
    }
  },

  channels: {
    whatsapp: {
      enabled: true,
      dmPolicy: "pairing",
      sendReadReceipts: true,
      textChunkLimit: 4000,
      mediaMaxMb: 50
    }
  },

  session: {
    reset: {
      mode: "daily",
      atHour: 4
    }
  },

  skills: {
    allowBundled: ["clawhub"]
  }
}
