// OpenClaw config: Anthropic Claude + Telegram
// Generated by HoldMyClaw â€” verified against official OpenClaw schema
// Location on server: /opt/openclaw/config/openclaw.json
{
  gateway: {
    port: 18789,
    bind: "lan",
    auth: {
      token: "${OPENCLAW_GATEWAY_TOKEN}"
    }
  },

  env: {
    ANTHROPIC_API_KEY: "${LLM_API_KEY}"
  },

  agents: {
    defaults: {
      model: {
        primary: "anthropic/claude-opus-4-6",
        fallbacks: ["anthropic/claude-sonnet-4-5-20250929"]
      },
      contextTokens: 200000,
      timeoutSeconds: 600
    }
  },

  channels: {
    telegram: {
      enabled: true,
      botToken: "${CHANNEL_TOKEN}",
      dmPolicy: "${DM_POLICY}",           // "pairing" (secure) or "open" (easy)
      allowFrom: [${ALLOW_FROM}],          // Telegram user IDs, e.g. ["123456789"]
      groups: {
        "*": { requireMention: true }
      },
      streamMode: "partial",
      reactionNotifications: "own",
      reactionLevel: "minimal"
    }
  },

  session: {
    reset: {
      mode: "daily",
      atHour: 4
    }
  },

  skills: {
    allowBundled: ["clawhub"]
  }
}
