// OpenClaw config: OpenAI + Telegram
// Generated by HoldMyClaw â€” verified against official OpenClaw schema
{
  gateway: {
    port: 18789,
    bind: "lan",
    auth: {
      token: "${OPENCLAW_GATEWAY_TOKEN}"
    }
  },

  env: {
    OPENAI_API_KEY: "${LLM_API_KEY}"
  },

  agents: {
    defaults: {
      model: {
        primary: "openai/gpt-4.1",
        fallbacks: ["openai/gpt-4.1-mini"]
      },
      contextTokens: 128000,
      timeoutSeconds: 600
    }
  },

  channels: {
    telegram: {
      enabled: true,
      botToken: "${CHANNEL_TOKEN}",
      dmPolicy: "${DM_POLICY}",
      allowFrom: [${ALLOW_FROM}],
      groups: {
        "*": { requireMention: true }
      },
      streamMode: "partial",
      reactionNotifications: "own",
      reactionLevel: "minimal"
    }
  },

  session: {
    reset: {
      mode: "daily",
      atHour: 4
    }
  },

  skills: {
    allowBundled: ["clawhub"]
  }
}
