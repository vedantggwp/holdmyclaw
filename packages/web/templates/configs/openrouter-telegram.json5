// OpenClaw config: OpenRouter + Telegram
// Generated by HoldMyClaw â€” verified against official OpenClaw schema
//
// OpenRouter is the easiest option: one API key accesses all models.
// Users can switch models later without changing their API key.
{
  gateway: {
    port: 18789,
    bind: "lan",
    auth: {
      token: "${OPENCLAW_GATEWAY_TOKEN}"
    }
  },

  env: {
    OPENROUTER_API_KEY: "${LLM_API_KEY}"
  },

  agents: {
    defaults: {
      model: {
        primary: "openrouter/anthropic/claude-opus-4-6",
        fallbacks: ["openrouter/anthropic/claude-sonnet-4-5-20250929"]
      },
      contextTokens: 200000,
      timeoutSeconds: 600
    }
  },

  channels: {
    telegram: {
      enabled: true,
      botToken: "${CHANNEL_TOKEN}",
      dmPolicy: "${DM_POLICY}",
      allowFrom: [${ALLOW_FROM}],
      groups: {
        "*": { requireMention: true }
      },
      streamMode: "partial",
      reactionNotifications: "own",
      reactionLevel: "minimal"
    }
  },

  session: {
    reset: {
      mode: "daily",
      atHour: 4
    }
  },

  skills: {
    allowBundled: ["clawhub"]
  }
}
